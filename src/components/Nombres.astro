<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üë®‚Äçüë©‚Äçüëß Iniciando animaciones de padres y padrinos...");

      // üéØ ESTADO INICIAL - Todo oculto
      gsap.set("#seccion-padres", { opacity: 0, y: 30 });
      gsap.set("#seccion-padrinos", { opacity: 0, y: 30 });
      gsap.set("#adorno-izq", { opacity: 0, x: -50 });
      gsap.set("#adorno-der", { opacity: 0, x: 50 });

      // üìç SCROLLTRIGGER PARA ACTIVAR LA ANIMACI√ìN
      ScrollTrigger.create({
        trigger: "#seccion-padres",
        start: "top 80%",
        end: "bottom 20%",
        
        onEnter: () => {
          console.log("‚ú® Padres y padrinos apareciendo simult√°neamente...");
          animarSimultaneo();
        },
        
        onLeaveBack: () => {
          console.log("üëã Ocultando secci√≥n de padres y padrinos...");
          ocultarSimultaneo();
        },
      });

      // üé¨ ANIMACI√ìN SIMULT√ÅNEA - TODO AL MISMO TIEMPO
      function animarSimultaneo() {
        const tl = gsap.timeline();

        // TODO aparece al mismo tiempo con la misma duraci√≥n
        tl.to("#adorno-izq, #adorno-der, #seccion-padres, #seccion-padrinos", {
          opacity: 1,
          duration: 1.2,
          ease: "power2.out",
        })
        // Movimientos individuales (simult√°neos)
        .to("#adorno-izq", {
          x: 0,
          duration: 1.2,
          ease: "power3.out",
        }, "<")
        .to("#adorno-der", {
          x: 0,
          duration: 1.2,
          ease: "power3.out",
        }, "<")
        .to("#seccion-padres, #seccion-padrinos", {
          y: 0,
          duration: 1.2,
          ease: "power2.out",
        }, "<");
      }

      // üîô ANIMACI√ìN DE SALIDA SIMULT√ÅNEA
      function ocultarSimultaneo() {
        const tl = gsap.timeline();

        // TODO desaparece al mismo tiempo
        tl.to("#adorno-izq, #adorno-der, #seccion-padres, #seccion-padrinos", {
          opacity: 0,
          duration: 0.6,
          ease: "power2.in",
        })
        // Movimientos individuales (simult√°neos)
        .to("#adorno-izq", {
          x: -50,
          duration: 0.6,
          ease: "power2.in",
        }, "<")
        .to("#adorno-der", {
          x: 50,
          duration: 0.6,
          ease: "power2.in",
        }, "<")
        .to("#seccion-padres, #seccion-padrinos", {
          y: 30,
          duration: 0.6,
          ease: "power2.in",
        }, "<");
      }
    });
  }
</script>