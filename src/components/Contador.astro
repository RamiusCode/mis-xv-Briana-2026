<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      const fechaEvento = new Date("2025-11-29T16:30:00").getTime();

      function actualizarContador() {
        const ahora = new Date().getTime();
        const diferencia = fechaEvento - ahora;

        if (diferencia > 0) {
          const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
          const horas = Math.floor((diferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutos = Math.floor((diferencia % (1000 * 60 * 60)) / (1000 * 60));
          const segundos = Math.floor((diferencia % (1000 * 60)) / 1000);

          const diasEl = document.getElementById("dias");
          const horasEl = document.getElementById("horas");
          const minutosEl = document.getElementById("minutos");
          const segundosEl = document.getElementById("segundos");

          if (diasEl) diasEl.textContent = String(dias).padStart(2, "0");
          if (horasEl) horasEl.textContent = String(horas).padStart(2, "0");
          if (minutosEl) minutosEl.textContent = String(minutos).padStart(2, "0");
          if (segundosEl) segundosEl.textContent = String(segundos).padStart(2, "0");
        }
      }

      actualizarContador();
      setInterval(actualizarContador, 1000);

      // Configuración inicial
      gsap.set("#texto-superior", { opacity: 0, y: -30 });
      gsap.set("#deco-izq", { opacity: 0, x: -50, scale: 0.8 });
      gsap.set("#deco-der", { opacity: 0, x: 50, scale: 0.8 });
      gsap.set("#card-contador", { opacity: 0, scale: 0.95 });

      // Animación de entrada con ScrollTrigger
      ScrollTrigger.create({
        trigger: "#card-contador",
        start: "top 85%",
        onEnter: () => {
          const tl = gsap.timeline();
          tl.to("#texto-superior", { opacity: 1, y: 0, duration: 0.8, ease: "power2.out" })
            .to("#card-contador", { opacity: 1, scale: 1, duration: 1, ease: "back.out(1.2)" }, "-=0.4")
            .to("#deco-izq, #deco-der", { opacity: 1, x: 0, scale: 1, duration: 1, ease: "power2.out" }, "-=0.6");
        },
        onLeaveBack: () => {
          gsap.set("#texto-superior", { opacity: 0, y: -30 });
          gsap.set("#deco-izq", { opacity: 0, x: -50, scale: 0.8 });
          gsap.set("#deco-der", { opacity: 0, x: 50, scale: 0.8 });
          gsap.set("#card-contador", { opacity: 0, scale: 0.95 });
        },
      });

      // Animaciones continuas
      gsap.to("#deco-izq", { y: -8, rotation: -3, duration: 4, ease: "sine.inOut", yoyo: true, repeat: -1 });
      gsap.to("#deco-der", { y: -8, rotation: 3, duration: 4, ease: "sine.inOut", yoyo: true, repeat: -1 });
      
      // Animación de separadores más sutil
      gsap.to(".separador", { 
        opacity: 0.3, 
        scale: 0.95, 
        duration: 1.5, 
        ease: "sine.inOut", 
        yoyo: true, 
        repeat: -1, 
        stagger: 0.2 
      });
      
      // Animación de brillo en números mejorada
      gsap.to(".numero-uniforme", {
        textShadow: "0 0 20px rgba(107, 142, 107, 0.5), 0 0 30px rgba(107, 142, 107, 0.3)",
        duration: 2.5,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        stagger: 0.3
      });
    });
  }
</script>

