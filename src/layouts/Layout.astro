---
import '../styles/global.css';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="m-0 p-0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/imagenes/MariposaVerde.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Crimson+Text:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300;1,400&family=Charm:wght@400;700&display=swap" rel="stylesheet">

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100%;
        height: 100%;
        overflow-x: hidden;
      }

      body {
        min-height: 100vh;
        background-image: url('/imagenes/FondoPrincipal.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        position: relative; /* contexto z-index */
      }

      main {
        position: relative;
        z-index: 10; /* encima del video */
      }

      /* Video de brillo */
      .video-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 5;
        pointer-events: none;
        mix-blend-mode: screen; /* elimina fondo oscuro o verde */
      }
    </style>
  </head>

  <body class="min-h-screen">
    <!-- Video encima -->
    <video
      class="video-overlay"
      src="/video/video.mp4"
      autoplay
      loop
      muted
      playsinline
    >
      Tu navegador no soporta el elemento de video.
    </video>

    <main>
      <slot />
    </main>
  </body>
</html>
